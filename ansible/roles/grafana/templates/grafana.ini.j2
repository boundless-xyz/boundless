# Grafana Configuration File
# This file is managed by Ansible - do not edit manually
# Generated from: roles/grafana/templates/grafana.ini.j2

[paths]
data = {{ grafana_data_dir }}
logs = {{ grafana_log_dir }}
plugins = {{ grafana_data_dir }}/plugins
provisioning = {{ grafana_provisioning_dir }}

[server]
protocol = http
http_addr = {{ grafana_listen_address }}
http_port = {{ grafana_port }}
domain = {{ grafana_host }}

[security]
admin_user = {{ grafana_admin_user }}
admin_password = {{ grafana_admin_password }}

[log]
mode = console file
level = {{ grafana_log_level }}

[log.console]
level = {{ grafana_log_level }}

[log.file]
level = {{ grafana_log_level }}
log_rotate = true
max_lines = 1000000
max_size_shift = 28
daily_rotate = true
max_days = 7

[datasources]
# Datasources are provisioned via files in {{ grafana_provisioning_dir }}/datasources

[dashboards]
# Dashboards are provisioned via files in {{ grafana_provisioning_dir }}/dashboards
