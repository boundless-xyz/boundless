# Bento Docker Compose Environment Variables
# Generated by Ansible - Do not edit manually

# Database Configuration
POSTGRES_HOST={{ bento_postgres_host }}
POSTGRES_PORT={{ bento_postgres_port }}
POSTGRES_DB={{ bento_postgres_db }}
POSTGRES_USER={{ bento_postgres_user }}
POSTGRES_PASSWORD={{ bento_postgres_password }}

# Redis/Valkey Configuration
REDIS_HOST={{ bento_redis_host }}

# MinIO Configuration
MINIO_HOST={{ bento_minio_host }}
MINIO_BUCKET={{ bento_minio_bucket }}
MINIO_ROOT_USER={{ bento_minio_root_user }}
MINIO_ROOT_PASS={{ bento_minio_root_pass }}

# Bento Configuration
RUST_LOG={{ bento_rust_log }}
RISC0_HOME={{ bento_risc0_home }}
SEGMENT_SIZE={{ bento_segment_size }}
RISC0_KECCAK_PO2={{ bento_risc0_keccak_po2 }}
REDIS_TTL={{ bento_redis_ttl }}
SNARK_TIMEOUT={{ bento_snark_timeout }}

# Bento Binary URL
BENTO_BINARY_URL={{ bento_binary_url }}

# Broker Configuration (if enabled)
{% if bento_prover_private_key is defined and bento_prover_private_key | length > 0 %}
PROVER_PRIVATE_KEY={{ bento_prover_private_key }}
{% endif %}
{% if bento_prover_rpc_url is defined and bento_prover_rpc_url | length > 0 %}
PROVER_RPC_URL={{ bento_prover_rpc_url }}
{% endif %}

