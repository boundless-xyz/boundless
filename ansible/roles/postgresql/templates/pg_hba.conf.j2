# PostgreSQL Client Authentication Configuration File
# This file is managed by Ansible - do not edit manually
# Generated from: roles/postgresql/templates/pg_hba.conf.j2

# TYPE  DATABASE        USER            ADDRESS                 METHOD

# "local" is for Unix domain socket connections only
local   all             postgres                                peer
local   all             all                                     peer

# Host-based authentication entries (configured via postgresql_hba_entries)
{% for entry in postgresql_hba_entries | default([]) %}
{% if entry.type == 'host' %}
host    {{ entry.database }}    {{ entry.user }}    {{ entry.address }}    {{ entry.method }}
{% elif entry.type == 'hostssl' %}
hostssl    {{ entry.database }}    {{ entry.user }}    {{ entry.address }}    {{ entry.method }}
{% elif entry.type == 'hostnossl' %}
hostnossl    {{ entry.database }}    {{ entry.user }}    {{ entry.address }}    {{ entry.method }}
{% endif %}
{% endfor %}
