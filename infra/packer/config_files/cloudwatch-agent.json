{
  "agent": {
    "metrics_collection_interval": 60
  },
  "metrics": {
    "namespace": "Boundless/Services/bento",
    "append_dimensions": {
      "InstanceId": "${aws:InstanceId}",
      "AutoScalingGroupName": "${aws:AutoScalingGroupName}"
    },
    "metrics_collected": {
      "mem": {
        "measurement": [
          "mem_used_percent",
          "mem_available",
          "mem_free",
          "mem_total"
        ]
      },
      "disk": {
        "resources": [
          "/"
        ],
        "measurement": [
          {
            "name": "used_percent",
            "rename": "disk_used_percent",
            "unit": "Percent"
          },
          {
            "name": "free",
            "rename": "disk_free",
            "unit": "Gigabytes"
          },
          {
            "name": "used",
            "rename": "disk_used",
            "unit": "Gigabytes"
          },
          {
            "name": "total",
            "rename": "disk_total",
            "unit": "Gigabytes"
          }
        ]
      }
    }
  }
}