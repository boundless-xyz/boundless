[Unit]
Description=Boundless Bento Prover Service
After=network.target

[Service]
Type=simple
User=ubuntu
EnvironmentFile=/etc/environment
WorkingDirectory=/opt/boundless
ExecStart=/usr/local/bin/agent -t prover --redis-ttl ${REDIS_TTL:-57600}
Restart=always
RestartSec=10
TimeoutStartSec=1800
TimeoutStopSec=300

[Install]
WantedBy=multi-user.target
